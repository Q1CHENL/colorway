<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="ColorwayMainWindow" parent="AdwApplicationWindow">
    <property name="default-width">360</property>
    <property name="default-height">100</property>
    <property name="resizable">0</property>
    <property name="title">Colorway</property>
    <child>
      <object class="GtkBox" id="main_box">
        <property name="orientation">vertical</property>
        <property name="margin-bottom">6</property>
        <child>
          <object class="AdwHeaderBar" id="headerbar">
            <property name="valign">start</property>
            <child type="start">
              <object class="GtkMenuButton" id="menu_button">
                <property name="icon-name">open-menu-symbolic</property>
                <style>
                  <class name="circular"/>
                </style>
              </object>
            </child>
            <style>
              <class name="flat"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkWindowHandle">
            <property name="vexpand">1</property>
            <property name="hexpand">1</property>
            <child>
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <child>
                  <object class="GtkBox" id="color_box">
                    <property name="valign">center</property>
                    <property name="orientation">vertical</property>
                  </object>
                </child>
                <child>
                  <object class="GtkSeparator">
                    <property name="orientation">vertical</property>
                  </object>
                </child>
                <child>
                  <object class="GtkBox" id="props_box">
                    <property name="orientation">vertical</property>
                    <property name="valign">center</property>
                    <property name="spacing">18</property>
                      <child>
                        <object class="GtkBox">
                          <property name="orientation">horizontal</property>
                          <property name="margin-bottom">12</property>
                          <child>
                            <object class="GtkBox" id="icon">
                              <property name="valign">center</property>
                              <property name="margin-start">12</property>
                              <property name="margin-end">12</property>
                              <property name="width-request">32</property>
                              <property name="height-request">32</property>
                              <style>
                                <class name="clr-preview"/>
                              </style>
                            </object>
                          </child>
                          <child>
                            <object class="GtkEntry" id="color_label">
                              <property name="valign">center</property>
                              <property name="margin-start">12</property>
                              <property name="margin-end">12</property>
                              <property name="hexpand">1</property>
                              <style>
                                <class name="clr-title"/>
                                <class name="numeric"/>
                              </style>
                            </object>
                          </child>
                          <child>
                            <object class="GtkButton" id="color_picker_button">
                              <property name="icon-name">color-picker-symbolic</property>
                              <property name="valign">center</property>
                              <property name="margin-start">12</property>
                              <property name="margin-end">12</property>
                              <property name="tooltip-text" translatable="yes">Pick Color</property>
                              <style>
                                <class name="circular"/>
                              </style>
                            </object>
                          </child>
                        </object>
                      </child>
                    </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>

using Gtk 4.0;
using He 1;

template $ColorwayMainWindow : He.ApplicationWindow {
  resizable: false;
  title: "Colorway";

  Box main_box {
    orientation: vertical;

      Box {
        Box {
          orientation: vertical;
          spacing: 6;
          styles [ "clr-props" ]

          He.AppBar headerbar1 {
            show-back: false;
            show-buttons: false;
          }

          WindowHandle {
            Box color_box {
              orientation: vertical;
              spacing: 6;
              margin-start: 18;
              margin-end: 18;
            }
          }
        }
        Box {
          orientation: vertical;
          spacing: 6;

          He.AppBar headerbar {
            show-back: false;

            MenuButton menu_button {
              icon-name: "open-menu-symbolic";
            }
          }

          WindowHandle {
            He.OverlayButton color_picker_button {
              icon: "color-select-symbolic";
              primary-tooltip: _("Pick Color");
              typeb: primary;
              size: small;
              styles [ "clr-preview" ]

              Box {
                Box props_box {
                  orientation: vertical;
                  spacing: 6;
                  margin-start: 18;
                  margin-end: 18;

                  He.TextField color_label {
                    tooltip-text: _("Change color (hexcode)");
                    styles [ "numeric" ]
                  }
                }
              }
            }
          }
        }
      }
    }
  }